{
  "name": "@robinbraemer/codemode",
  "version": "0.1.1",
  "description": "Code Mode MCP tools from OpenAPI specs. Two tools (search + execute) replace hundreds of individual MCP tools.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp.d.ts",
      "import": "./dist/mcp.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint && tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "openapi",
    "codemode",
    "code-mode",
    "sandbox",
    "ai",
    "llm",
    "tools",
    "model-context-protocol"
  ],
  "author": "cnap-tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cnap-tech/codemode.git"
  },
  "peerDependencies": {
    "isolated-vm": "6"
  },
  "peerDependenciesMeta": {
    "isolated-vm": {
      "optional": true
    }
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "hono": "^4.7.6",
    "isolated-vm": "^6.0.2",
    "oxlint": "^1.50.0",

    "tsup": "^8.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "zod": "^3.24.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "isolated-vm",
      "esbuild"
    ]
  }
}
